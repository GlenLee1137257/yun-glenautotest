<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.glen.autotest.mapper.ProjectMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.glen.autotest.model.ProjectDO">
        <id column="id" property="id" />
        <result column="project_admin" property="projectAdmin" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <!-- 项目列表查询结果映射（包含管理员用户名） -->
    <resultMap id="ProjectDTOMap" type="com.glen.autotest.dto.common.ProjectDTO">
        <id column="id" property="id" />
        <result column="project_admin" property="projectAdmin" />
        <result column="project_admin_name" property="projectAdminName" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, project_admin, name, description, gmt_create, gmt_modified
    </sql>

    <!-- 查询项目列表，包含项目管理员用户名 -->
    <select id="selectListWithAdminName" resultMap="ProjectDTOMap">
        SELECT 
            p.id,
            p.project_admin,
            a.username AS project_admin_name,
            p.name,
            p.description,
            p.gmt_create,
            p.gmt_modified
        FROM project p
        LEFT JOIN glen_account.account a ON p.project_admin = a.id
        ORDER BY p.gmt_create DESC
    </select>

</mapper>
