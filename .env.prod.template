# Glen AutoTest Platform - Production Environment Variables Template
# 生产环境配置模板
# 复制此文件为 .env.prod 并填写实际值

# MySQL
MYSQL_ROOT_PASSWORD=<YOUR_MYSQL_PASSWORD>
MYSQL_HOST=<YOUR_MYSQL_HOST>
MYSQL_PORT=3306

# Redis
REDIS_PASSWORD=<YOUR_REDIS_PASSWORD>
REDIS_HOST=<YOUR_REDIS_HOST>
REDIS_PORT=6379

# Nacos
NACOS_SERVER_ADDR=<YOUR_NACOS_HOST>:8848
NACOS_NAMESPACE=prod
NACOS_AUTH_TOKEN=<YOUR_NACOS_AUTH_TOKEN_MUST_BE_AT_LEAST_32_CHARS>
NACOS_AUTH_IDENTITY_KEY=<YOUR_IDENTITY_KEY>
NACOS_AUTH_IDENTITY_VALUE=<YOUR_IDENTITY_VALUE>

# Kafka
KAFKA_BOOTSTRAP_SERVERS=<YOUR_KAFKA_HOST>:9092

# MinIO
MINIO_ENDPOINT=http://<YOUR_MINIO_HOST>:9000
MINIO_ROOT_USER=<YOUR_MINIO_USER>
MINIO_ROOT_PASSWORD=<YOUR_MINIO_PASSWORD>
MINIO_BUCKET_NAME=glen-autotest-prod

# Application
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Security (建议更改)
JWT_SECRET=<YOUR_JWT_SECRET_AT_LEAST_32_CHARS>
